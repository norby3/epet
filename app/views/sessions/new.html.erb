<div class="page-header">
    <h1>Login</h1>
</div>

<%= form_tag sessions_path, :class => "well form-horizontal" do %>

    <fieldset>
    <div class="control-group">
        <%= label_tag :email, "Email", :class => "control-label" %>
        <div class="controls">
            <%= text_field_tag :email, params[:email], :class => "input" %>
      </div>
    </div>
    <div class="control-group">
        <%= label_tag :password, "Password", :class => "control-label" %>
        <div class="controls">
            <%= password_field_tag :password %>
        </div>
    </div>
    <div class="control-group">
        <%= label_tag :remember_me, "Remember Me", :class => "control-label" %>
        <div class="controls">
            <label class="checkbox">
                <%= check_box_tag :remember_me, 'yes', true %>
                Stay logged in for 2 weeks
            </label>
        </div>
    </div>
    <div class="form-actions">
        <%= submit_tag "Log in", :class => "btn btn-primary" %>
        <%= link_to "Cancel", root_path, :class => "btn" %>
    </div>

    </fieldset>
<% end %>
