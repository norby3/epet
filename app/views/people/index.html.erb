<h1>Listing people</h1>

<table>
  <tr>
    <th>User</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Mobile phone</th>
    <th>Image</th>
    <th>Email2</th>
    <th>Email3</th>
    <th>Phone2</th>
    <th>Phone3</th>
    <th>Timezone</th>
    <th>Country</th>
    <th>Personas</th>
    <th>Status</th>
    <th>Updated by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.user_id %></td>
    <td><%= person.first_name %></td>
    <td><%= person.last_name %></td>
    <td><%= person.email %></td>
    <td><%= person.mobile_phone %></td>
    <td><%= person.image %></td>
    <td><%= person.email2 %></td>
    <td><%= person.email3 %></td>
    <td><%= person.phone2 %></td>
    <td><%= person.phone3 %></td>
    <td><%= person.timezone %></td>
    <td><%= person.country %></td>
    <td><%= person.personas %></td>
    <td><%= person.status %></td>
    <td><%= person.updated_by %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

