<%= simple_form_for [@pet, @petphoto], :html => {:class => "form-horizontal", :multipart => true} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.file_field :image, :label => "Select Photo" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save", :class => 'btn btn-primary' %>
    <%= link_to "Cancel", pets_path, :class => 'btn' %>
  </div>
<% end %>