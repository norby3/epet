
<%= simple_form_for @pet, :html => {:class => "form-horizontal"} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :input_html => { :class => 'input-medium' } %>
    <%= f.input :gender, :collection => ['Female', 'Female-Spayed', 'Male', 'Male-Neutered'], 
          :input_html => { :class => 'input-medium' } %>

    <%= f.input :breed %>
    <%= f.input :birthdate, 
                           :as => :date, 
                :include_blank => true, 
                   :start_year => Time.now.year - 15,
                   :input_html => { :class => 'input-small' } %>
    <%= f.input :weight, :prompt => "Just guess if you don't know", :input_html => { :class => 'input-small' } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <!-- < %= link_to t('.cancel', :default => t("helpers.links.cancel")),
            person_path(@person), :class => 'btn' %> -->
  </div>
<% end %>


